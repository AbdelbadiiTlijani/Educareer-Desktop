<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox alignment="CENTER" prefHeight="561.0" prefWidth="471.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #0f172a, #1e293b); -fx-padding: 40px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.educareer.controllers.User.UserRegistrationController">

    <!-- Title -->
    <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 32px; -fx-text-fill: #f8fafc; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 0, 2);" text="S'inscrire" />

    <!-- Registration Form -->
    <GridPane alignment="CENTER" hgap="15" vgap="15">
        <!-- Last Name Field -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="Entrez votre nom" style="-fx-background-color: rgba(30, 41, 59, 0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59, 130, 246, 0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc; -fx-padding: 8px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- First Name Field (Added) -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Prénom :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="firstNameField" promptText="Entrez votre prénom" style="-fx-background-color: rgba(30, 41, 59, 0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59, 130, 246, 0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc; -fx-padding: 8px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Role Selection (Added) -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Rôle :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="roleComboBox" prefWidth="200" promptText="Sélectionnez votre rôle" style="-fx-background-color: rgba(30, 41, 59, 0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59, 130, 246, 0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc; -fx-padding: 6px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <!-- Date of Birth (Added) -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Date de naissance :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <DatePicker fx:id="birthDatePicker" prefWidth="200" promptText="JJ/MM/AAAA" style="-fx-background-color: rgba(30, 41, 59, 0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59, 130, 246, 0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc; -fx-padding: 6px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Email Field -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="emailField" promptText="Entrez votre email" style="-fx-background-color: rgba(30, 41, 59, 0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59, 130, 246, 0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc; -fx-padding: 8px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Password Field -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Mot de passe :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" style="-fx-background-color: rgba(30, 41, 59, 0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59, 130, 246, 0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc; -fx-padding: 8px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <!-- CV Field -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Photo : " GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="PhotoField" editable="false" promptText="Aucun fichier sélectionné" style="-fx-background-color: rgba(30, 41, 59, 0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59, 130, 246, 0.2); -fx-border-width: 1px; -fx-text-fill: #a1a1aa; -fx-padding: 8px; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="PhotoButton" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8px 20px; -fx-background-radius: 25px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(59, 130, 246, 0.4), 15, 0, 0, 4);" text="Choisir une Photo" />

        <Button fx:id="registerButton" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8px 20px; -fx-background-radius: 25px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.4), 15, 0, 0, 4);" text="S'inscrire" />
    </HBox>
</VBox>
