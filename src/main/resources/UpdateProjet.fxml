<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.educareer.controllers.UpdateProjet"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f0fdf4;">

    <VBox spacing="15.0" alignment="CENTER" AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0">

        <Label text="Modifier le projet"
               style="-fx-font-size: 20px; -fx-text-fill: #064e3b;"/>

        <TextField fx:id="titreField" promptText="Titre du projet"
                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #34d399; -fx-padding: 8 12;"/>

        <TextArea fx:id="contenuField" promptText="Contenu du projet" prefHeight="100"
                  style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #34d399; -fx-padding: 8 12;"/>

        <ComboBox fx:id="categorieComboBox" promptText="Sélectionner la catégorie"
                  style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #34d399;"/>

        <Button text="Mettre à jour le projet" onAction="#updateProjet"
                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 20; -fx-padding: 10 20;"/>

    </VBox>

</AnchorPane>
