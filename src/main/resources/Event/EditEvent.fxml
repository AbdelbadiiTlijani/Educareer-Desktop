<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.educareer.controllers.Event.EditEventController">
    <content>
        <BorderPane style="-fx-background-color: #f8f9fa;">
            <top>
                <VBox>
                    <StackPane style="-fx-background-color: #0f172a; -fx-padding: 30 0 10 0;">
                        <children>
                            <Label text="Modifier un événement"
                                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" />
                        </children>
                    </StackPane>
                </VBox>
            </top>

            <center>
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 30;">
                    <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                        <effect>
                            <DropShadow color="#00000033" radius="10" />
                        </effect>

                        <Label text="Modifier les informations de l'événement"
                               style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333333;" />

                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30" />
                                <ColumnConstraints percentWidth="70" />
                            </columnConstraints>

                            <!-- Titre -->
                            <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555;" />
                            <TextField fx:id="titreField" promptText="Entrez le titre" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                       style="-fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;" />

                            <!-- Description -->
                            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555;" />
                            <TextField fx:id="descriptionField" promptText="Entrez la description" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                       style="-fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;" />

                            <!-- Lieu -->
                            <Label text="Lieu:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555;" />
                            <TextField fx:id="lieuField" promptText="Entrez le lieu" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                       style="-fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;" />

                            <!-- Nombre de places -->
                            <Label text="Nombre de places:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555;" />
                            <TextField fx:id="nbrPlacesField" promptText="Entrez le nombre" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                       style="-fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;" />

                            <!-- Date -->
                            <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555;" />
                            <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                        style="-fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;" />

                            <!-- Type -->
                            <Label text="Type d'événement:" GridPane.columnIndex="0" GridPane.rowIndex="5"
                                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555;" />
                            <ComboBox fx:id="typeComboBox" promptText="Sélectionner un type" GridPane.columnIndex="1" GridPane.rowIndex="5"
                                      style="-fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 5;" />
                        </GridPane>

                        <!-- Message de validation -->
                        <Label fx:id="messageLabel" style="-fx-font-size: 14; -fx-text-fill: red;" />

                        <!-- Boutons -->
                        <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20 0 0 0;">
                            <Button text="Modifier" onAction="#handleModifier"
                                    style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 12 30; -fx-background-radius: 5;" />
                            <Button text="Annuler" onAction="#handleAnnuler"
                                    style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 12 30; -fx-background-radius: 5;" />
                        </HBox>
                    </VBox>
                </VBox>
            </center>

            <bottom>
                <HBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #0f172a;">
                    <Label text="© 2025 Educareer" style="-fx-text-fill: white; -fx-font-size: 14;" />
                </HBox>
            </bottom>
        </BorderPane>
    </content>
</ScrollPane>
