<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f5f7fa; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" stylesheets="@/Event/front.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.educareer.controllers.Event.EventsStudentController">

    <top>
        <AnchorPane prefHeight="100.0" style="-fx-background-color: linear-gradient(to right, #4e54c8, #8f94fb);">
            <children>
                <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="Événements à venir" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />
            </children>
        </AnchorPane>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Liste des événements" />

            <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" prefHeight="500" style="-fx-background-color: transparent;">
                <ListView fx:id="eventsListView" style="-fx-background-color: transparent;" />
            </ScrollPane>
        </VBox>
    </center>

    <bottom>
        <AnchorPane style="-fx-background-color: #333; -fx-min-height: 50px;">
            <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;" text="Événements Student - Gestion des événements" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0" />

               <!-- Button to go back to student.fxml -->
            <Button layoutX="20.0" onAction="#handleBackButton" style="-fx-background-color: rgba(255, 255, 255, 0.2);                            -fx-text-fill: white;                            -fx-font-weight: bold;                            -fx-padding: 5px 15px;                            -fx-border-radius: 20px;                            -fx-background-radius: 20px; -fx-cursor: hand;" text="Retour" AnchorPane.bottomAnchor="25.599999999999998" AnchorPane.leftAnchor="20.0" />
        </AnchorPane>
    </bottom>

</BorderPane>
