<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane stylesheets="@calendar.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.educareer.controllers.Event.CalendarController">

    <top>
        <HBox spacing="10" styleClass="header">
            <Button fx:id="prevMonthButton" text="⟨" />
            <Label fx:id="monthYearLabel" styleClass="month-year" text="Avril 2025" />
            <Button fx:id="nextMonthButton" text="⟩" />
        </HBox>

    </top>

    <center>
        <GridPane fx:id="calendarGrid" styleClass="calendar-grid" />
    </center>

</BorderPane>
