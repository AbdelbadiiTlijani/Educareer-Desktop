<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="1002.0" prefWidth="1058.0" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.educareer.controllers.cours.FrontCoursController">

    <!-- HEADER -->
    <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-background-color: black">
        <!-- Ligne du titre principal et bouton "Nouveau" aligné -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10 20 0 20;">
            <!-- Titre principal -->
            <Label text="EduCareer" style="-fx-text-fill:#2196F3 ; -fx-font-size: 28px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <!-- Bouton "Nouveau" aligné à droite du titre -->
            <Button fx:id="backButton" text="Retour"
                    style="-fx-background-color: #64748b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px; -fx-padding: 5 15;" />
        </HBox>

        <!-- Ligne du sous-titre et barre de recherche -->
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20 10 20;">
            <Label text="Nos Cours" style="-fx-text-fill: orange; -fx-font-size: 18px;" />
            <Pane HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" prefWidth="250" promptText="Rechercher un cours..."
                       style="-fx-background-radius: 5px; -fx-padding: 5px;" />
            <Button fx:id="searchButton" text="Rechercher"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px; -fx-padding: 5 15;" />
        </HBox>

        <!-- CONTENU : liste des cours -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-padding: 0 20 20 20;">
            <TilePane fx:id="coursContainer" alignment="CENTER" hgap="20" vgap="20" />
        </ScrollPane>
    </VBox>

</AnchorPane>