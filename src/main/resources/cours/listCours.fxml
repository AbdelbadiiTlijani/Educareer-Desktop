<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../affichageInterface.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.educareer.controllers.cours.listCoursController">

    <!-- Header Section -->
    <top>
        <AnchorPane prefHeight="115.0" prefWidth="511.0" styleClass="header-pane">
            <children>
                <Label styleClass="header-title" text="Cours" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

                <Button fx:id="viewBackButton" onAction="#handleBackButton" styleClass="btn-retour" text="Retour" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" />
            </children>
        </AnchorPane>
    </top>

    <!-- Content Section -->
    <center>
        <VBox spacing="15" styleClass="content-box">
            <Label fx:id="titre" styleClass="section-title" text="Les Cours Enregistrés " />

            <Label fx:id="jomlaa" styleClass="section-subtitle" text="Cliquez sur le bouton Supprimer d'un cours pour le supprimer du système" />

            <!-- Search and Filter -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher par nom..." style="-fx-padding: 5px; -fx-background-radius: 5px;" />
                <ComboBox fx:id="roleFilter" promptText="Filtrer par prérequis" style="-fx-background-radius: 5px;" />
               <Button fx:id="viewStatCours" mnemonicParsing="false" onAction="#handleStatCours" prefHeight="8.0" prefWidth="52.0" text="stat" />
            </HBox>
            <!-- Entête de la liste -->
            <HBox prefHeight="45.0" prefWidth="520.0" spacing="15" styleClass="list-header">
                <Label styleClass="list-header-label" text="Catégorie" />
                <Label styleClass="list-header-label" text="Action" />
            </HBox>
            <AnchorPane styleClass="cours-container">
                <ListView fx:id="coursListView" styleClass="cours-listview" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                <effect>
                    <DropShadow color="#00000044" radius="10.0" />
                </effect>
            </AnchorPane>

            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <AnchorPane styleClass="footer">
            <Label styleClass="footer-label" text="Panneau Formatteur - Systeme de Gestion Des catégories cours " AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0" />
        </AnchorPane>
    </bottom>
</BorderPane>
