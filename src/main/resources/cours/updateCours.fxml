<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #f5f7fa; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="tn.esprit.educareer.controllers.cours.updateCoursController">

    <!-- Header Section -->
    <top>
        <AnchorPane prefHeight="115.0" prefWidth="511.0"
                    style="-fx-background-color: linear-gradient(to right, #4e54c8, #8f94fb); -fx-min-height: 100px; -fx-padding: 10px;">
            <children>
                <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"
                       text="Mise à Jour Cours" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
            </children>
        </AnchorPane>
    </top>

    <!-- Content Section -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Modifier Cours"/>

            <!-- Nom du Cours -->
            <TextField fx:id="nomCours" promptText="Nom du Cours"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Document -->
            <TextField fx:id="documentCours" promptText="Document (URL ou fichier)"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Image -->
            <TextField fx:id="imageCours" promptText="Image (URL)"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Requirements -->
            <TextField fx:id="requirementCours" promptText="Exigences (si nécessaire)"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Sélectionner une catégorie -->
            <ComboBox fx:id="categorieCoursComboBox" promptText="Sélectionner une catégorie"
                      style="-fx-background-radius: 5px;"/>

            <!-- Sélectionner un formateur -->
            <ComboBox fx:id="formateurComboBox" promptText="Sélectionner un formateur"
                      style="-fx-background-radius: 5px;"/>

            <!-- Button to update the course -->
            <Button onAction="#handleUpdateCours" text="Mettre à jour"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 15px; -fx-background-radius: 5px; -fx-cursor: hand;"/>
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <AnchorPane style="-fx-background-color: #333; -fx-min-height: 50px;">
            <children>
                <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;"
                       text="Panneau Admin - Mise à Jour Cours" AnchorPane.bottomAnchor="10.0"
                       AnchorPane.rightAnchor="20.0"/>
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
