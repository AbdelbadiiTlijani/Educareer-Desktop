<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" prefHeight="745.0" prefWidth="538.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #0f172a, #1e293b); -fx-padding: 40px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.educareer.controllers.cours.ajouterCoursController">

    <!-- Back Button -->
    <HBox prefWidth="320.0">
        <Button fx:id="backButton" style="-fx-background-color: #64748b; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 5px 15px; -fx-background-radius: 20px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(100, 116, 139, 0.4), 10, 0, 0, 2);" text="Retour" />
    </HBox>

    <!-- Title -->
    <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 32px; -fx-text-fill: #f8fafc; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 0, 2);" text="Ajouter un Cours" />

    <!-- Global Error Label -->
    <Label fx:id="globalErrorLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-text-fill: #ef4444; -fx-font-weight: bold;"
           visible="false" wrapText="true" />

    <!-- Course Form -->
    <GridPane alignment="CENTER" hgap="15" vgap="8">
        <columnConstraints>
            <ColumnConstraints minWidth="100" />
            <ColumnConstraints minWidth="200" />
        </columnConstraints>

        <!-- Nom du cours -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Nom du Cours:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nomCours" promptText="Nom du Cours" style="-fx-background-color: rgba(30,41,59,0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59,130,246,0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label fx:id="nomCoursErrorLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #ef4444;" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Lien document -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Document:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="documentCours" promptText="Lien vers le document" style="-fx-background-color: rgba(30,41,59,0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59,130,246,0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label fx:id="documentCoursErrorLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #ef4444;" text="" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Lien image -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Image:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="imageCours" promptText="Lien vers l'image du cours" style="-fx-background-color: rgba(30,41,59,0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59,130,246,0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label fx:id="imageCoursErrorLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #ef4444;" text="" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <!-- Prérequis -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Prérequis:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="requirementCours" promptText="Prérequis du cours" style="-fx-background-color: rgba(30,41,59,0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59,130,246,0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Label fx:id="requirementCoursErrorLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #ef4444;" text="" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <!-- Catégorie -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <ComboBox fx:id="categorieComboBox" promptText="Sélectionnez une catégorie" style="-fx-background-color: rgba(30,41,59,0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59,130,246,0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc;" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        <Label fx:id="categorieErrorLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #ef4444;" text="" GridPane.columnIndex="1" GridPane.rowIndex="9" />

        <!-- Formateur -->
        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-text-fill: #94a3b8;" text="Formateur:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
        <ComboBox fx:id="formateurComboBox" promptText="Sélectionnez un formateur" style="-fx-background-color: rgba(30,41,59,0.7); -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: rgba(59,130,246,0.2); -fx-border-width: 1px; -fx-text-fill: #f8fafc;" GridPane.columnIndex="1" GridPane.rowIndex="10" />
        <Label fx:id="formateurErrorLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #ef4444;" text="" GridPane.columnIndex="1" GridPane.rowIndex="11" />

    </GridPane>

    <!-- Add Course Button -->
    <Button fx:id="ajoutCoursButton" onAction="#handleAddCourseButton" text="Ajouter le Cours"
            style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 30px; -fx-background-radius: 25px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(16,185,129,0.4), 15, 0, 0, 4);" />
</VBox>
