<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f5f7fa; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.educareer.controllers.Reclamation.AjouterReclamation"
            stylesheets="@/Reclamation/styles.css">

    <!-- Header Section -->
    <top>
        <AnchorPane prefHeight="115.0" prefWidth="511.0" style="-fx-background-color: linear-gradient(to right, #4e54c8, #8f94fb);">
            <children>
                <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="Ajouter Réclamations" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />
                <Button fx:id="handlback" onAction="#handleBackButton" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-text-fill: white; -fx-font-weight: bold;" text="Retour" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" />
            </children>
        </AnchorPane>
    </top>

    <!-- Content Section -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Ajouter Une Réclamation" />
            <HBox spacing="10" />
            <AnchorPane style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 5px;">
                <ListView fx:id="reclamationListView" style="-fx-background-color: transparent; -fx-border-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

                <TextField fx:id="sujet" layoutX="47.0" layoutY="35.0" promptText="Sujet" onKeyTyped="#handleTyping" />
                <TextField fx:id="description" layoutX="48.0" layoutY="88.0" promptText="Description" onKeyTyped="#handleTyping" />
                <ComboBox fx:id="typeReclamation" layoutX="46.0" layoutY="152.0" prefWidth="150.0" promptText="Type de Réclamation" />
                <Button layoutX="47.0" layoutY="252.0" mnemonicParsing="false" onAction="#save" text="Enregistrer" />

                <effect>
                    <DropShadow color="#00000044" radius="10.0" />
                </effect>
            </AnchorPane>

            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <AnchorPane style="-fx-background-color: #333;">
            <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;" text="Panneau Admin - Système de Gestion d'Utilisateurs" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0" />
        </AnchorPane>
    </bottom>
</BorderPane>
