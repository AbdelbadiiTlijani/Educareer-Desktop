<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.educareer.controllers.ReadCategoriesProjet"
            style="-fx-background-color: #f5f7fa; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

    <!-- Header Section -->
    <top>
        <AnchorPane prefHeight="100.0" style="-fx-background-color: linear-gradient(to right, #4e54c8, #8f94fb);">
            <children>
                <Label text="Gestion des Catégories de Projet"
                       style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"
                       AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
                <Button text="Retour"
                        onAction="#handleBack"
                        style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px;"
                        AnchorPane.leftAnchor="20.0" AnchorPane.bottomAnchor="10.0"/>
            </children>
        </AnchorPane>
    </top>

    <!-- Content Section -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <Label text="Liste des catégories enregistrées"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Label text="Cliquez sur le bouton supprimer d’une catégorie pour la retirer."
                   style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-font-style: italic;"/>

            <Button fx:id="btnAjouter" text="Ajouter une Catégorie" onAction="#goToAjoutCategorie"
                    style="-fx-background-color: #4e54c8; -fx-text-fill: white; -fx-padding: 8px 15px; -fx-background-radius: 10px; -fx-font-weight: bold; -fx-cursor: hand;"/>

            <AnchorPane style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 5px;">
                <TableView fx:id="tableCategorie"
                           prefHeight="300.0"
                           AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                           style="-fx-background-color: transparent;">

                    <columns>
                        <TableColumn fx:id="colCompteur" text="Numéro" prefWidth="60"/>
                        <TableColumn fx:id="colNom" text="Nom de la catégorie" prefWidth="220"/>
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="200"/>
                    </columns>
                </TableView>
                <effect>
                    <DropShadow color="#00000044" radius="10.0"/>
                </effect>
            </AnchorPane>
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <AnchorPane style="-fx-background-color: #333; -fx-min-height: 50px;">
            <Label text="Panneau Admin - Gestion des Catégories"
                   style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;"
                   AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0"/>
        </AnchorPane>
    </bottom>
</BorderPane>
