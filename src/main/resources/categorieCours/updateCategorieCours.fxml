<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #f5f7fa; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="tn.esprit.educareer.controllers.categorieCours.updateCategorieCoursController">

    <!-- Header Section -->
    <top>
        <AnchorPane prefHeight="100.0" style="-fx-background-color: linear-gradient(to right, #4e54c8, #8f94fb);">
            <children>
                <Label text="Mise à Jour Catégorie Cours"
                       style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"
                       AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
            </children>
        </AnchorPane>
    </top>

    <!-- Content Section -->
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 30px;">
            <Label text="Modifier le nom de la catégorie" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Champ Nom -->
            <TextField fx:id="nomCategorie" promptText="Nom de la catégorie"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Bouton Mettre à jour -->
            <Button onAction="#handleUpdateButton" text="Mettre à jour"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-background-radius: 5px;"/>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <AnchorPane style="-fx-background-color: #333; -fx-min-height: 40px;">
            <Label text="© Admin - Mise à jour catégorie" style="-fx-text-fill: white; -fx-font-size: 12px;"
                   AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="10.0"/>
        </AnchorPane>
    </bottom>

</BorderPane>
