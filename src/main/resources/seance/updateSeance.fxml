<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f5f7fa; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.educareer.controllers.seance.updateSeanceController">

    <!-- Header Section -->
    <top>
        <AnchorPane prefHeight="115.0" prefWidth="511.0"
                    style="-fx-background-color: linear-gradient(to right, #4e54c8, #8f94fb); -fx-min-height: 100px; -fx-padding: 10px;">
            <children>
                <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"
                       text="Mise à Jour Séance Cours" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>

                <Button onAction="#handleBackButton"
                        style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5px 15px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-cursor: hand;"
                        text="Retour" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0"/>
            </children>
        </AnchorPane>
    </top>

    <!-- Content Section -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"
                   text="Modifier Séance de Cours"/>

            <!-- Titre -->
            <TextField fx:id="titreSeance" promptText="Titre de la séance"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Description -->
            <TextField fx:id="descriptionSeance" promptText="Description de la séance"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Date et Heure -->
            <TextField fx:id="dateSeance" promptText="Date et heure de la séance (Ex: 2025-04-14 14:00)"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Durée -->
            <TextField fx:id="dureeSeance" promptText="Durée en minutes"
                       style="-fx-padding: 10px; -fx-background-radius: 5px;"/>

            <!-- Cours associé -->
            <ComboBox fx:id="coursComboBox" promptText="Sélectionner un cours" style="-fx-background-radius: 5px;"/>

            <!-- Update Button -->
            <Button onAction="#handleUpdateButton" text="Mettre à jour"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 15px; -fx-background-radius: 5px; -fx-cursor: hand;"/>

            <!-- Error Label (for validation messages) -->
            <Label fx:id="errorLabel" style="-fx-font-size: 14px; -fx-text-fill: #ef4444; -fx-font-weight: bold;"
                   text="" visible="false"/>
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <AnchorPane style="-fx-background-color: #333; -fx-min-height: 50px;">
            <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;"
                   text="Panneau Admin - Mise à Jour Séance Cours" AnchorPane.bottomAnchor="10.0"
                   AnchorPane.rightAnchor="20.0"/>
        </AnchorPane>
    </bottom>
</BorderPane>
