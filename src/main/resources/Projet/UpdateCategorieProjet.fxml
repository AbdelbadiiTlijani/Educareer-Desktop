<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.educareer.controllers.projets.UpdateCategorieProjet"
            prefHeight="250.0" prefWidth="400.0"
            style="-fx-background-color: #f9fbfc;">

    <VBox spacing="20.0" alignment="CENTER" AnchorPane.topAnchor="30.0"
          AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">

        <Label text="Modifier la catégorie de projet"
               style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;"/>

        <TextField fx:id="tfCategorie" promptText="Nom de la catégorie"
                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 8 12;"/>

        <Button text="Enregistrer" onAction="#modifierCategorie"
                style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20;"/>

    </VBox>

</AnchorPane>
